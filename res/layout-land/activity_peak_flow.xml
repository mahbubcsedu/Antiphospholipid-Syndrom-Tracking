<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context="${packageName}.${activityClass}" >

    <TextView
        android:id="@+id/peakFlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="46dp"
        android:gravity="center"
        android:text="@string/PeakFlow"
        android:textSize="@dimen/activity_subhead" />

    <TextView
        android:id="@+id/peakFlow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/peakFlow"
        android:layout_below="@+id/peakFlow"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="49dp"
        android:text="@string/PeakFlow1" />

    <EditText
        android:id="@+id/etPeakFlow01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/peakFlow01"
        android:layout_below="@+id/peakFlow"
        android:layout_marginLeft="46dp"
        android:layout_toRightOf="@+id/peakFlow01"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/btnPfAdd1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/peakFlow"
        android:layout_alignRight="@+id/etPeakFlow01"
        android:layout_alignBottom="@+id/etPeakFlow01"
        android:text="Add1" />
    
     <TextView
        android:id="@+id/peakFlow02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/peakFlow01"
        android:layout_below="@+id/peakFlow01"
        android:layout_marginTop="35dp"
        android:text="@string/PeakFlow2" />
     <EditText
        android:id="@+id/etPeakFlow02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/peakFlow02"
        android:layout_alignBottom="@+id/peakFlow02"
        android:layout_alignLeft="@+id/etPeakFlow01"
        android:ems="10"
        android:inputType="number" />
     <Button
        android:id="@+id/btnPfAdd2"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/etPeakFlow02"
        android:layout_alignRight="@+id/etPeakFlow02"
        android:text="Add2" />
     
     
    <TextView
        android:id="@+id/peakFlow03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/peakFlow01"
        android:layout_below="@+id/peakFlow02"
        android:layout_marginTop="35dp"
        android:text="@string/PeakFlow3" />

   

    

    

    <EditText
        android:id="@+id/etPeakFlow03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/peakFlow03"
        android:layout_alignBottom="@+id/peakFlow03"
        android:layout_alignLeft="@+id/etPeakFlow02"
        android:ems="10"
        android:inputType="number" >
    </EditText>

    

    



</RelativeLayout>